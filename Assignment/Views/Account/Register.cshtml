<body class="authentication-bg">
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="text-center">
                        <a href="index.html" class="logo">
                            <img src="assets/images/logo-light.png" alt="" height="22" class="logo-light mx-auto">
                            <img src="assets/images/logo-dark.png" alt="" height="22" class="logo-dark mx-auto">
                        </a>
                 
                    </div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="card">
                            <div class="card-body p-4">

                                <div class="text-center mb-4">
                                    <h4 class="text-uppercase mt-0">Register</h4>
                                </div>
                                <form action="#">
                                    <div class="form-group">
                                        <label for="fullname">Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id= "emailaddress", placeholder = "Enter your Email", required = "" })
                                        @*<input class="form-control" type="text" id="fullname" placeholder="Enter your name" required>*@
                                    </div>
                                    <div class="form-group">
                                        <label for="emailaddress">Password</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "passwordemailaddress", required = "", placeholder = "Enter your Password" })
                                        @*<input class="form-control" type="email" id="emailaddress" required placeholder="Enter your email">*@
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Confirm Password</label>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required="", id = "password", placeholder = "Enter confirm password" })
                                        @*<input class="form-control" type="password" required id="password" placeholder="Enter your password">*@
                                    </div>
                            
                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-primary btn-block" type="submit"> Sign Up </button>
                                    </div>
                                </form>
                            </div> <!-- end card-body -->
                        </div>
                    }
                    <!-- end card -->
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Already have account?  <a href="pages-login.html" class="text-dark ml-1"><b>Sign In</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor js -->
    <script src="~/Content/assets/js/vendor.min.js"></script>
