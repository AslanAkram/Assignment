@model  Assignment.ViewModels.Upload_Images
@{
    ViewBag.Title = "ShareToFacebook";
}

<style>
    .i-am-centered {
        margin: auto;
        max-width: 900px;
    }
</style>

<main class="content">
    <div class="container-fluid p-0">
        <div class="i-am-centered">
            <div class="row">
                <div class="col-12 col-xl-10">
                    <div class="card">
                        <div class="card-body">

                            @using (Html.BeginForm("ShareToFacebook", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h3> File Upload</h3>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <h4 class="bg-success">@ViewBag.Message</h4>
                                <div class="form-group">

                                    <label style="float:left">Message :</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                @*<div class="form-group">
                                    @Html.Label("Title", htmlAttributes: new { @class = "control-label col-sm" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@

                                <div class="form-group">
                                   <label style="float:left">Upload :</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Upload, new { type = "file" })
                                        @Html.ValidationMessageFor(model => model.Upload, "", new { @class = "text-danger" })
                                    </div>
                                </div>





                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                            }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

